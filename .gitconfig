[branch]
	verbose = true
[user]
	email = philipp.rost@dlr.de
	name = Philipp Rost
[log]
	date = relative
	; date = short
[format]
	; >(N) Padding links einfÃ¼gen
	; <(N) rechts
	pretty = format:%C(auto)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN %Creset%s %C(auto)%d 
[alias]
	ac = commit -am
	am = commit --amend --no-edit
	co = checkout
	lg = log --graph
	pullom = pull origin main
	pushom = push origin main
	unstage = restore --staged
	us = unstage
[init]
	defaultBranch = main
[status]
	submoduleSummary = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
; [editor]
; 	config = nvim.appimage
[core]
	editor = nvim.appimage
